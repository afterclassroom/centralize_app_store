<div class="container">
  <a name='post-<%= post.id %>'></a>
  <div id='post_<%= post.id %>' class='reply_to_post post <%= cycle('odd', 'even') -%> col-md-10'>
    <div class='contents'>
      <div class='user col-md-2'>
        <div class='icon pull-left' style="margin-right: 10px;"><%= image_tag current_user.avatar(:thumb), :size => '60' %></div>
        <div class='username pull-left' style="margin-right: 10px;">
          <%= link_to_if Forem.user_profile_links, post.user.forem_name, [main_app, post.user] %>
        </div>
        <a href="javascript:;"><time datetime="<%= post.created_at.to_s(:db) -%>"><%= "#{time_ago_in_words(post.created_at)} #{t("ago")}" %></time></a> --
        <% if post.reply_to %>
        <span class='in_reply_to'>
          <%= link_to "#{t("forem.post.in_reply_to")} #{post.reply_to.user.forem_name}", "#post-#{post.reply_to.id}" %>
        </span>
        <% end %>
      </div>
      <div class='contents col-md-7'>
        <%= forem_format(post.text) %>
      </div>
    </div>
  </div>
</div>
