<%= simple_form_for [forem, :admin, @forum] do |f| %>
<div class="span4">
	<%= f.association :category, :include_blank => false %><br>
	<%= f.input :title, :input_html => { :class => "input-block-level" } %>
	<%= f.input :position, :input_html => { :class => "input-block-level" } %>
</div>
<div class="span6">
  <%= f.input :description, :as => :text, :input_html => { :class => "input-block-level", :rows => 4 } %>
  <br>
  <h3><%= t('forem.admin.forum.moderator_groups') %></h3>
  <%= f.association :moderators, :as => :check_boxes, :input_html => { :style => "margin-left:0;"} %>
</div>
<div class="span12">
  <%= f.submit :class => "btn btn-primary" %>
</div>
<% end %>
