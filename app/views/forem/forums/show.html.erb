<div class='forum container-full'>
  <%= render :partial => 'forem/forums/head', :locals => { :forum => @forum } %>

  <div class="container">
    <div class="pagination">
      <%= forem_pages_widget(@topics, :inner_window => 3, renderer: BootstrapPagination::Rails) %>
    </div>
    <table class='topics table-striped table' cellspacing='0'>
      <thead>
        <tr>
          <th class="icon"></th>
          <th class="byline"><%= t('forem.topic.headings.topic') -%></th>
          <th class="latest-post text-center"><%= t('forem.topic.headings.latest') -%></th>
          <th class="posts-count text-center"><%= t('forem.topic.headings.posts') -%></th>
          <th class="views-count text-center"><%= t('forem.topic.headings.views') -%></th>
        </tr>
      </thead>
      <tbody>
        <% if @topics.empty? %>
        <tr><td colspan='5' align='center'><%= t('forem.topic.none') %></td></tr>
        <% end %>
        <%= render @topics %>
      </tbody>
    </table>
    <div class="pagination">
      <%= forem_pages_widget(@topics, :inner_window => 3, renderer: BootstrapPagination::Rails) %>
    </div>
  </div>
</div>