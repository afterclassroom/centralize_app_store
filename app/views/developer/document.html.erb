	<script type="text/javascript">
		$(function(){
		$('.documentLink').bind('click', function(){
			var $objLink  = $(this);
			var resource  = $objLink.data('href');
			window.location.hash = resource;
		});

		 $('#documentContent').load('/documentation/getting_start.html');

		 var current_hash = false;
		 setInterval(function() {
		 	if(window.location.hash != current_hash) {
		 		// alert(current_hash);
		 		current_hash = window.location.hash;
		 		var urlLoading = current_hash.substring(1);
				$.get(urlLoading, {  }, function(res){//"_": $.now()
		 			$('#documentContent').html(res);

					$('.documentLink').each(function(){
						if($(this).parent().hasClass('active')){
							$(this).parent().removeClass('active');
						}
						if(urlLoading == $(this).data('href')){
							$(this).parent().addClass('active');
							// return false;
						}
					});

				});
		 	}
		 }, 100);
	});

	</script>