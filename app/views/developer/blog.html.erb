	<div class="row-fluid blog">
		<div class="la-anim-1"></div>
		<!-- Blog Content -->
		<div class="blog-content blog-items">

			<div class="span8 content">

				<div class="row-fluid blog-posts" style="margin-top: -20px;">
					<div id="tumblr_posts"></div>
					<div id="loadmore" class="loadmore">load more...</div>
				</div>

			</div>
		</div>
		<!-- Blog Content end -->



		<!-- Right Side -->
		<div class="span4 sidebar">

			<!-- Categories -->
			<div class="widget">
				<div class="categories">
					<strong>Categories</strong>
					<br>
					<br>
